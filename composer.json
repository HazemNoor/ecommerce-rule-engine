{
    "name": "hazemnoor/ecommerce-rule-engine",
    "type": "library",
    "description": "An eCommerce Rule engine",
    "keywords": [],
    "homepage": "https://hazem.co",
    "license": "proprietary",
    "authors": [
        {
            "name": "Hazem Noor",
            "email": "me@hazem.co"
        }
    ],
    "require": {
        "php": "^7.4.3",
        "ext-json": "*",
        "symfony/expression-language": "^5.4",
        "symfony/polyfill-php80": "^1.26"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Hazemnoor\\RulesEngine\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Hazemnoor\\RulesEngine\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "config": {
        "platform": {
            "php": "7.4.3"
        },
        "sort-packages": true
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpcs",
            "./vendor/bin/phpunit"
        ],
        "coverage": [
            "./vendor/bin/phpunit --coverage-html .code-coverage"
        ],
        "fix": [
            "./vendor/bin/phpcbf"
        ]
    }
}
